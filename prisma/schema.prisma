generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Furnish {
  FULLY
  SEMI
  NONE
}

model Property {
  id         Int      @id @default(autoincrement())
  sellerId   Int
  title      String
  address    String?
  cost       Int?
  deposit    Int?
  bedrooms   Int?
  washRooms  Int?
  floorNum   Int?
  floorArea  Int?
  parking    Boolean? @default(true)
  balcony    Int?
  furnishing Furnish?
  mediaUrls  String[]
  listedAt   DateTime @default(now())
  seller     Seller   @relation(fields: [sellerId], references: [id])

  IntrestedProperties IntrestedProperties[]
}

model Seller {
  id               Int        @id @default(autoincrement())
  businessId       String?    @unique
  tags             String[]
  messagesRecieved Message[]
  Property         Property[]
  user             User       @relation(fields: [userId], references: [id])
  userId           Int        @unique
}

model User {
  id                  Int                   @id @default(autoincrement())
  name                String
  phone               String?                @unique
  email               String                @unique
  createdAt           DateTime              @default(now())
  googleId            String?               @unique
  picture             String?
  sentMessages        Message[]
  intrestedProperties IntrestedProperties[]
  socialLinks         SocialLink[]
  Seller              Seller[]
}

model IntrestedProperties {
  Property   Property @relation(fields: [propertyId], references: [id])
  User       User     @relation(fields: [userId], references: [id])
  userId     Int
  propertyId Int

  @@id([userId, propertyId])
}

model Message {
  id         Int      @id @default(autoincrement())
  propertyId Int
  userId     Int
  name       String
  phone      String
  message    String?
  sellerId   Int
  sendAt     DateTime @default(now())
  Seller     Seller?  @relation(fields: [sellerId], references: [id])
  User       User     @relation(fields: [userId], references: [id])
}

model SocialLink {
  id     Int    @id @default(autoincrement())
  name   String
  url    String @unique
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

